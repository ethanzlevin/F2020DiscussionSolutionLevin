@{
    ViewData["Title"] = "Assign App User Roles";
}

<h3>Assign App User Roles</h3>

<form asp-action="AssignAppUserRoles" method="post">

    <div class="form-group">
       
        <label>App Users</label>
        <select name="ddlAppUsers" asp-items="ViewBag.AppUsers"
                class="form-control" id="usersTarget">
            <option value="None">None</option>
        </select>
    </div>

    <div id="wrapper">

        <div class="form-group" style="float:left; width:50%">
            <label>Current Roles</label>
            <select name="currentRoles" class="form-control" multiple style="width:200px" id="currentRolesTarget"></select>
            <input type="submit" name="submitButton" value="RemoveRoles"
                   class="btn btn-primary" />
        </div>

        <div class="form-group" style="float:right; width:50%">
            <label>Available Roles</label>
            <select name ="availableRoles" class="form-control" multiple style="width:200px" id="availableRolesTarget"></select>
            <input type="submit" name="submitButton" value="AddRoles"
                   class="btn btn-primary" />
        </div>

    </div>
</form>

@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/js/GetRolesForUser.js" type="text/javascript"></script>
    <script src="~/js/DisplayRoles.js" type="text/javascript"></script>
    <script src="~/js/CheckBoxListUserRoles.js" type="text/javascript"></script>
}